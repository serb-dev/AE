{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": false,
        "allowJs": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/@types/*", "*"]
        }
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs"
    }
}